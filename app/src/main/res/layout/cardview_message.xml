<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <LinearLayout
        android:id="@+id/linearLayoutMessage"
        android:orientation="horizontal"
        android:background="@drawable/rounded_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewMessage"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Nuevo mensaje"
                android:textSize="15sp"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewDateMessage"
                    android:textColor="@color/grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:textSize="12sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/imageViewViewedMessage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_check_grey"
                    />

            </LinearLayout>




        </LinearLayout>




    </LinearLayout>

</RelativeLayout>

